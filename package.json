{
    "name": "vscode-project-tree",
    "displayName": "Project Tree",
    "description": "A Project Tree for VSCode",
    "version": "0.0.1",
    "publisher": "mdda",
    "homepage": "https://github.com/mdda/vscode-project-tree",
    "repository": {
        "type": "git",
        "url": "https://github.com/mdda/vscode-project-tree"
    },
    "icon": "resources/icon.png",
    "galleryBanner": {
        "color": "#292d3e",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:projectTree"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "projectTree.refresh",
                "title": "Refresh project tree",
                "icon": {
                    "dark": "resources/dark/icon-refresh.svg",
                    "light": "resources/light/icon-refresh.svg"
                }
            },
            {
                "command": "projectTree.revealCurrentSymbol",
                "title": "Show in code outline"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "projecttree",
                    "title": "Project Tree",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "outline": [
                {
                    "id": "projectTree",
                    "name": "Project Tree"
                }
            ]
        },
        "menus": {
            "editor/context": [
                {
                    "command": "projectTree.revealCurrentSymbol",
                    "group": "navigation"
                }
            ],
            "view/title": [
                {
                    "command": "projectTree.refresh",
                    "when": "view == projectTree",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Project Tree configuration",
            "properties": {
                "symbolOutline.doSort": {
                    "type": "boolean",
                    "default": false,
                    "description": "Sort the outline"
                },
                "symbolOutline.expandNodes": {
                    "type": "array",
                    "default": [
                        "Module",
                        "Class",
                        "Interface",
                        "Namespace",
                        "Object",
                        "Package",
                        "Struct"
                    ],
                    "description": "Kinds of nodes to be expanded automatically."
                },
                "symbolOutline.sortOrder": {
                    "type": "array",
                    "default": [
                        "Class",
                        "Module",
                        "Constant",
                        "Interface",
                        "*",
                        "Constructor",
                        "Function",
                        "Method"
                    ],
                    "description": "Order to the sort symbols in, if sorted.  * is placeholder for all symbols not explicitly listed."
                },
                "symbolOutline.topLevel": {
                    "type": "array",
                    "default": [
                        "*"
                    ],
                    "description": "Which symbols to include at the topmost scope.  * includes everything."
                }
            }
        }
    },
    "xscripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.1.17"
    }
}
